{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "standard",
    "prettier",
    "plugin:react/recommended"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react"],
  "settings": {
    "react": {
      "version" : "detect"
    }
  },
  "rules": {
    "eqeqeq": "error",
    "curly": "error",
    "quotes": ["error", "double"],
    "eol-last": ["error", "always"],
    "no-unreachable": "error",
    "no-unused-vars": "error",
    "no-console": "error",
    "no-extra-bind": "error",
    "no-extra-semi": "error",
    "react/jsx-uses-react": "off",
    "react/react-in-jsx-scope": "off"
  }
}
